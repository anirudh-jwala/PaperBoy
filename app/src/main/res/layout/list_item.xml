<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_textview"
        style="@style/TextViews"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:textColor="@color/textColorNewsTitle"
        android:textSize="@dimen/title_font"
        tools:text="The Fiver | Inter Miami and the fearsome heron" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/secondary_linear"
        android:paddingTop="@dimen/secondary_linear">

        <TextView
            android:id="@+id/section_textview"
            style="@style/TextViews"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/textColorNewsSection"
            android:textSize="@dimen/section_font"
            tools:text="Section: Football" />

        <TextView
            android:id="@+id/date_textview"
            style="@style/TextViews"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:paddingStart="@dimen/main_padding"
            android:textAllCaps="true"
            android:textColor="@color/textColorNewsSection"
            android:textSize="@dimen/section_font"
            tools:text="09/11/2018" />

        <TextView
            android:id="@+id/author_textview"
            style="@style/TextViews"
            android:paddingStart="@dimen/main_padding"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/author_font"
            tools:text="by: Author" />
    </LinearLayout>
</LinearLayout>